@model TagMD

<div class="mb-5">
    <nav class="navbar navbar-dark bg-secondary">
        <a href="#" class="navbar-brand">標籤管理 - 編輯</a>
        <div class="form-inline">
            <a asp-area="Management" asp-controller="Tag" asp-action="Index" class="btn btn-primary icon-back"></a>
        </div>
    </nav>
</div>

<div class="container-fluid">
    <form asp-area="Management" asp-controller="Tag" asp-action="Update" method="post">
        <input asp-for="Id" />

        <div class="form-group row">
            <label asp-for="TagName" class="col-2 col-form-label"></label>
            <div class="col-10">
                <input asp-for="TagName" class="form-control" readonly/>
                <span asp-validation-for="TagName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Status" class="col-2 col-form-label"></label>
            <div class="col-10">
                <select asp-for="Status" asp-items="Model.StatusOptions" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group justify-content-center">
            <span class="text-danger">@ViewBag.ErrorMsg</span>
        </div>

        <div class="form-group row justify-content-center">
            <input type="submit" class="btn btn-primary" value="更新" />
        </div>
    </form>
</div>