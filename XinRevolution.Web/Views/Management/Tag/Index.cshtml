@model IEnumerable<TagModel>

<div class="mb-5">
    <nav class="navbar navbar-dark bg-secondary">
        <a href="#" class="navbar-brand">標籤管理</a>
        <div class="form-inline">
            <a asp-area="Management" asp-controller="Tag" asp-action="Create" class="btn btn-primary">新增</a>
        </div>
    </nav>
</div>

<div class="container-fluid">
    <table class="table table-striped table-bordered table-hover table-sm">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>標籤</th>
                <th>狀態</th>
                <th>操作區</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var status = item.Status ? "開啟" : "關閉";

                <tr>
                    <td>@item.Id</td>
                    <td>@item.TagName</td>
                    <td>@status</td>
                    <td>
                        <a asp-area="Management" asp-controller="Tag" asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary">編輯</a>
                        <a asp-area="Management" asp-controller="Tag" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary">刪除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
        initDataTable($('table'));
    </script>
}
