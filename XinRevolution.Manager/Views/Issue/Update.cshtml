@model IssueMD

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Issue" asp-action="Index">議題管理<</a></li>
            <li class="breadcrumb-item active" aria-current="page">新增</li>
        </ol>
    </nav>
</div>

<div>
    <form asp-controller="Issue" asp-action="Update" method="post">
        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Name"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Name" readonly />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Intro"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Intro" />
                <span class="text-danger" asp-validation-for="Intro"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <span class="text-danger">@ViewBag.ErrMessage</span>
        </div>

        <div class="form-group row justify-content-center">
            <input class="btn btn-primary align-items-center" type="submit" value="送出" />
        </div>
    </form>
</div>