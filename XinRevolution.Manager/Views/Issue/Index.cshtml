@model List<IssueEntity>

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">議題管理</li>
        </ol>
    </nav>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>議題名稱</th>
                <th>議題簡介</th>
                <th>相關操作區</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Intro</td>
                    <td>
                        <a class="icon-update" title="編輯" asp-controller="Issue" asp-action="Update" asp-route-id="@item.Id"></a>
                        <a class="icon-delete" title="刪除" asp-controller="Issue" asp-action="Delete" asp-route-id="@item.Id"></a>
                        <a class="icon-detail" title="子議題管理" asp-controller="IssueItem" asp-action="Index" asp-route-id="@item.Id"></a>
                        <a class="icon-relative" title="相關連結管理" asp-controller="IssueRelativeLink" asp-action="Index" asp-route-id="@item.Id"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        initDataTable($('table'), "/Issue/Create");
    </script>
}
